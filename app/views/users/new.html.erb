<div class="container mt-4 d-flex h-100">
  <div class="m-auto">
    <%= form_tag @user, class:"justify-content-center p-3 form" do %>
      <div class="form-group">
        <div class="d-flex justify-content-center mb-4"> 
          <%= image_tag "Logo_micolet.png", class: "logo" %>
        </div>
        <h4><%= t('welcome_title') %> </h4>
        <h5 class="d-flex justify-content-center"> <%= t('subtitle_title') %></h5>
      </div>
      <div class="form-group">
        <%= label_tag "user[email]", User.human_attribute_name(:email), class: "form-label" %>
        <%= email_field_tag "user[email]", nil, required: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <h5> <%= User.human_attribute_name(:preferences) %> </h5>
        <div>
          <% preferences.each do |preference| %>
            <div class="list-group-item border-0 p-0">
              <%= check_box_tag "user[preferences][]", preference, false %>
              <%= label_tag "user[preferences][]", preference %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-group d-flex justify-content-center mb-4">
        <%= submit_tag t('subscribe'), class:"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>